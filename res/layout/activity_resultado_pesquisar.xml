<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testeadt.ResultadoPesquisar">


    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>



    <ImageView
        android:id="@+id/PesquisarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/semfoto" />



    <TextView
        android:id="@+id/PesquisarNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PesquisarFoto"
        android:layout_toRightOf="@+id/PesquisarFoto"
        android:text="Fulano das Cove"  />

    <TextView
        android:id="@+id/PesquisarLabelPWR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@+id/PesquisarPWR"
        android:text="PWR:"  />
    <TextView
        android:id="@+id/PesquisarPWR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_alignTop="@+id/PesquisarLabelPWR"
        android:text=" 33"  />

    <TextView
        android:id="@+id/PesquisarTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PesquisarNome"
        android:layout_toRightOf="@+id/PesquisarFoto"
        android:text="Time do Joao"  />

    <TextView
        android:id="@+id/PesquisarNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PesquisarFoto"
        android:layout_alignParentLeft="true"
        android:text="Fulaninho fez isso e isso...."  />
</RelativeLayout>
