<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.testeadt.NovoUsuario" >

    <LinearLayout
        android:id="@+id/NovoUsuarioForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/LabelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Nome"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/nomeJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="text"
        android:text="Bruno Siqueira"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/LabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="text"
        android:text="a@a"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/LabelSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Senha"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="text"
        android:text="a"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/LabelSenha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Senha Novamente"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/Senha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="text"
        android:text="a"
        android:textAppearance="?android:attr/textAppearanceSmall" />



        <Button
            android:id="@+id/Registrar"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registrar"
            android:onClick="RegistrarOnClick"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Voltar"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Voltar"
            android:onClick="VoltarOnClick"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>