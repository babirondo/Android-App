<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testeadt.Home" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FotoUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="FotoUsuarioOnClick"
        android:clickable="true"
        android:src="@drawable/abc_ic_voice_search" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="#13 Bruno Siqueira"
        android:id="@+id/nomeJogador"

        android:layout_toRightOf="@+id/FotoUsuario"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mega Play Paintball"
        android:id="@+id/timeJogador"
        android:layout_below="@+id/FotoUsuario"
        android:layout_alignLeft="@+id/nomeJogador"
        android:layout_alignStart="@+id/nomeJogador" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Snake"
        android:layout_below="@id/timeJogador"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerSnake"
        android:layout_below="@id/timeJogador"
        android:layout_toRightOf="@id/Snake"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackCenter"
        android:layout_toRightOf="@id/CornerSnake"
        android:layout_below="@id/timeJogador"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CornerDoritos"
        android:layout_below="@id/timeJogador"
        android:layout_toRightOf="@id/BackCenter"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Doritos"
        android:layout_below="@id/timeJogador"
        android:layout_toRightOf="@id/CornerDoritos"
        android:src="@drawable/abc_ic_cab_done_holo_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Coach"
        android:layout_below="@id/timeJogador"
        android:layout_toRightOf="@id/Doritos"
        android:src="@drawable/abc_ic_cab_done_holo_light" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velocidade"
        android:id="@+id/velocidade"

        android:layout_below="@id/Snake" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gun Fight"
        android:id="@+id/gunfight"
        android:layout_below="@id/velocidade"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Conhecimento de Jogo"
        android:id="@+id/conhecimento"
        android:layout_below="@id/gunfight"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notaVelocidade"
        style = "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "3"
        android:layout_toRightOf="@+id/velocidade"
        android:layout_alignTop="@+id/velocidade" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notaGunfight"
        style = "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "3"
        android:layout_toRightOf="@id/gunfight"
        android:layout_below="@id/notaVelocidade" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notaConhecimento"
        style = "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "3"
        android:layout_toRightOf="@id/conhecimento"
        android:layout_below="@id/notaGunfight" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_alignRight="@id/notaConhecimento"
        android:layout_height="wrap_content"
        android:text="9 Avaliações"
        android:id="@+id/avaliacoes"
        android:layout_below="@id/conhecimento" />
</RelativeLayout>
